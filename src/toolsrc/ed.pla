end
def cursend#0
    if numlines > scrnheight - 1
        cursrow  = numlines - 1
        cursy    = scrnheight - 1
        viewtop  = cursrow - (scrnheight - 1)
    else
        cursrow  = numlines - 1
        cursy    = numlines - 1
