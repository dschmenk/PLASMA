            is keyarrowleft | keyoptmod
                key = keyctrla; break
            is keyarrowright | keyoptmod
                key = keyctrls; break
            is keyarrowup | keyoptmod
                key = keyctrlw; break
            is keyarrowdown | keyoptmod
                key = keyctrlz; break
            is keyenter | keyoptmod
