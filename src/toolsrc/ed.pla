def pgleft#0
    word i, strptr

    strptr = txtlinbuf=>[cursrow]
    if curscol > ^strptr
        i = ^strptr
    else
        for i = 1 to ^strptr
            if ^(strptr + i) <> keyspace
                break
            fin
        next
        i--
        if i >= curscol
            i = 0
        fin
    fin
    if curshpos(i)
        drawscrn
    else
        drawgutter
    fin
end
def cursright#0
