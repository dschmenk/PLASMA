            is '6' | keyoptmod
                key = keyarrowright; break
            is '8' | keyoptmod
                key = keyarrowup; break
            is '2' | keyoptmod
                key = keyarrowdown; break
            is '7' | keyoptmod
                key = keyctrlq; break // Top
            is '1' | keyoptmod
                key = keyctrle; break // Bottom
            is '9' | keyoptmod
                key = keyctrlw; break // Pg Up
            is '3' | keyoptmod
                key = keyctrlz; break // Pg Dn
            is '5' | keyoptmod
                key = keyctrlb; break // Selection start/end
            is '0' | keyoptmod
