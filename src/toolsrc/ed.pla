def fillnum(huns, tens, ones, chrptr)#3
    if huns
        chrptr->[0] = '0' + huns
        chrptr->[1] = '0' + tens
        chrptr->[2] = '0' + ones
        ones++
        if ones > 9
            ones = 0
            tens++
            if tens > 9
                tens = 0
                huns++
            fin
        fin
    elsif tens
        chrptr->[0] = ' '
        chrptr->[1] = '0' + tens
        chrptr->[2] = '0' + ones
        ones++
        if ones > 9
            ones = 0
            tens++
            if tens > 9
                tens = 0
                huns = 1
            fin
        fin
    elsif ones
        chrptr->[0] = ' '
        chrptr->[1] = ' '
        chrptr->[2] = '0' + ones
        ones++
        if ones > 9
            ones = 0
            tens = 1
        fin
    fin
    return huns, tens, ones
end
def strtonum(strptr)
    word num, i
    byte c

    num = 0
    for i = 1 to ^strptr
        c = ^(strptr + i) & $7F
        if c < '0' and c > '9'
            break
        fin
        num = num * 10 + c - '0'
    next
    return num
end
