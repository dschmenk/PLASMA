        STA     DSTH
        LDA     ESTKL+2,X
        CLC
        ADC     #$7F
        STA     DSTX
        LDY     #$00
        LDA     ESTKL,X
        STA     (DST),Y
        STY     DSTX
        INX
        INX
        INX
        RTS
end
