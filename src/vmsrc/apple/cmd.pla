def addsym(sym, addr)#0
    while ^sym & $80
        ^lastsym = ^sym
        lastsym++
        sym++
    loop
    lastsym->0 = ^sym
    lastsym=>1 = addr
    lastsym    = lastsym + 3
    ^lastsym   = 0
end
