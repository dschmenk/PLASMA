// READ STRING
// STR = RDSTR(PROMPTCHAR)
//
asm rdstr(p)#1
        LDA     ESTKL,X
        STA     $33
        STX     ESP
        BIT     ROMEN
        JSR     $FD6A
        STX     $01FF
-       LDA     $01FF,X
        AND     #$7F
        STA     $01FF,X
        DEX
        BPL     -
        TXA
        LDX     ESP
        STA     ESTKL,X
        LDA     #$01
        STA     ESTKH,X
        BIT     LCRDEN+LCBNK2
        RTS
end
