export asm dgrTileStr(buff, x, y, tilestr, strlen, tilebuff)#0
-       DEX
        DEX
        DEX
        DEX
        LDA     ESTKL+9,X   ; BUFF
        STA     ESTKL+3,X
        LDA     ESTKH+9,X
        STA     ESTKH+3,X
        LDA     ESTKL+8,X   ; X COORD
        STA     ESTKL+2,X
        LDA     ESTKL+7,X   ; Y COORD
