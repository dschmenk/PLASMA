byte player = 0   // xpos
byte        = 0   // ypos
byte        = 4   // angle
byte        = 4   // lamp
byte        = 1   // fov
byte        = 15  // skill
byte        = 100 // health
byte        = 100 // energy
word        = 500 // oil
byte        = 0   // gold
