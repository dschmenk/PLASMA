const FALSE = 0
const TRUE  = not FALSE

const maxlight = 10
const maxview  = 20

word xdir =  0,  1,  1,  1,  0, -1, -1, -1
word ydir = -1, -1,  0,  1,  1,  1,  0, -1
byte vplayer = '^', '\\', '>', '/', 'v', '\\', '<', '/'
byte totaldarkness = 0

//
// Power-ups
//

const TORCH_OIL  = 250
const MANA       = 50
const RUN_ENERGY = 4

struc t_pos
